{{> header}}
<link rel="stylesheet" href="./assets/css/administrador-edit.css">

<body>

    <div class="contenedor">
        <div class="menu">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="#">UCA Admin</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <img src="./assets/img/admin/inicio.png" alt="">

                            <a class="nav-link" href="/administrador-home">Inicio <span
                                    class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <img src="./assets/img/admin/Empresas.png" alt="">

                            <a class="nav-link" href="/lista-empresa">Empresas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Consultorias y
                                Capacitaciones</a>
                        </li>
                        <li>
                            <img src="./assets/img/empresas/logOut.png" alt="">
                            <a href="/logout">Salir</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>


        <div class="contenido-formulario">
            <div class="titulo">
                <h1>Autorización de Empresa {{empresa.nombre_empresa}}</h1>
            </div>
            <div class="formulario">
                <form action="/empresa:{{empresa._id}}:{{empresa.status}}" method="POST">
                    <div class="form-group">
                        <label for="">Giro Empresarial</label>
                        <select name="giro_empresarial" disabled id="" class="form-control">
                            <option value="{{empresa.giro_empresarial}}">{{empresa.giro_empresarial}}</option>
                        </select>
                    </div>
                    <div class="doble-campo">
                        <div class="form-group w-50 mr-3">
                            <label for="">Nombre Completo</label>
                            <input type="text" disabled value="{{empresa.nombre_completo}}" class="form-control"
                                name="nombre_completo">
                        </div>
                        <div class="form-group w-50 ml-3">
                            <label for="">Telefono</label>
                            <input type="text" disabled value="{{empresa.tel}}" class="form-control" name="tel">
                        </div>
                    </div>
                    <div class="doble-campo">
                        <div class="form-group w-50 mr-3">
                            <label for="">Carrera:</label>
                            <input type="text" disabled value="{{empresa.carrera}}" class="form-control" name="carrera">
                        </div>
                        <div class="form-group w-50 ml-3">
                            <label for="">Matricula</label>
                            <input type="text" disabled class="form-control" value="{{empresa.matricula}}"
                                name="matricula">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="">Domicilio</label>
                        <input type="text" disabled class="form-control" value="{{empresa.calle}}" name="calle">
                    </div>
                    <div class="doble-campo">
                        <div class="form-group w-50 mr-3">
                            <label for="">Colonia</label>
                            <input type="text" disabled class="form-control" value="{{empresa.numero_dir}}"
                                name="numero_dir">
                        </div>
                        <div class="form-group w-50 ml-3">
                            <label for="">Codigo Postal</label>
                            <input type="number" disabled class="form-control" value="{{empresa.cp}}" name="cp">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="">Descripción empresa</label>
                        <textarea name="descripcion_empresa" id="" cols="30" rows="4"
                            value="{{empresa.descripcion_empresa}}" disabled class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">Correo Electronico</label>
                        <input type="email" disabled class="form-control" value="{{empresa.correo}}" name="correo">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-outline-info">Autorizar Empresa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{>footer}}
    <script>
        document.ready = document.getElementById('nombre').value = "{{empresa.nombre_completo}}";
        document.ready = document.getElementById('tel').value = "{{ empresa.tel }}";
        document.ready = document.getElementById('giro').value = "{{ empresa.giro_empresarial }}";
    </script>
</body>