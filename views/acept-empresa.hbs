{{> header}}
<link rel="stylesheet" href="./assets/css/administrador-edit.css">
<body>

<div class="contenedor">
        <div class="menu">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="#">UCA Admin</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="/administrador-home">Inicio <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/lista-empresa">Empresas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Consultorias y Capacitaciones</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="contenido-formulario">
            <div class="titulo">
                <h1>Edicion de Empresa {{empresa.nombre_empresa}}</h1>
            </div>
            <div class="formulario">
                <form action="/empresa:{{empresa._id}}/{{empresa.status}}" method="POST">
                    <div class="form-group">
                        <label for="">Giro Empresarial</label>
                        <select name="giro_empresarial" id="giro" class="form-control">
                            <option value="">Selecciona el giro de tu empresa</option>
                            <option value="Restaurantes/Servicios de comida">Restaurantes/Servicios de comida</option>
                            <option value="Hoteleria">Hoteleria</option>
                            <option value="Consultoria Empresarial">Consultoria Empresarial</option>
                            <option value="Medicina">Medicina</option>
                            <option value="Industria">Industria</option>
                            <option value="Construccion">Construcci√≥n</option>
                            <option value="Servicios">Servicios</option>
                            <option value="Comercio">Comercio</option>
                            <option value="Automoviles">Automoviles</option>
                            <option value="Veterinaria">Veterinaria</option>
                            <option value="Tecnologia">Tecnologia</option>
                            <option value="Otros">Otros</option>
                        </select>
                    </div>
                    <div class="doble-campo">
                        <div class="form-group w-50 mr-3">
                            <label for="">Nombre Completo</label>
                            <input type="text" class="form-control" id="nombre" name="nombre_completo">
                        </div>
                        <div class="form-group w-50 ml-3">
                            <label for="">Telefono</label>
                            <input type="text" class="form-control" id="tel" name="tel">
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-outline-primary">Actualizar Estatus</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{>footer}}
<script>
    document.ready = document.getElementById('nombre').value = "{{empresa.nombre_completo}}";
    document.ready = document.getElementById('tel').value = {{empresa.tel}};
    document.ready = document.getElementById('giro').value = {{empresa.giro_empresarial}};
</script>
</body>
