{{> header}}
<link rel="stylesheet" href="./assets/css/administrador-edit.css">

<body>

    <div class="contenedor">
        <div class="menu">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a class="navbar-brand" href="#">UCA Admin</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <img src="./assets/img/admin/inicio.png" alt="">

                            <a class="nav-link" href="/administrador-home">Inicio <span
                                    class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <img src="./assets/img/admin/Empresas.png" alt="">

                            <a class="nav-link" href="/lista-empresa">Empresas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Consultorias y
                                Capacitaciones</a>
                        </li>
                        <li>
                            <img src="./assets/img/empresas/logOut.png" alt="">
                            <a href="/logout">Salir</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>


        <div class="contenido-formulario">
            <div class="titulo">
                <p id="titulo">Actualización de Empresa {{empresa.nombre_empresa}}</p>
            </div>
            <div class="formulario">
                <form action="/editEmpresa:{{empresa._id}}" method="POST">
                    <div class="form-group">
                        <label for="">Giro Empresarial</label>
                        <select name="giro_empresarial" id="" class="form-control">
                            <option value="{{empresa.giro_empresarial}}">{{empresa.giro_empresarial}}</option>
                            <option value="">Selecciona el giro de tu empresa</option>
                            <option value="Restaurantes/Servicios de comida">Emprendedores</option>
                            <option value="Restaurantes/Servicios de comida">Restaurantes/Servicios de comida</option>
                            <option value="Hoteleria">Hoteleria</option>
                            <option value="Consultoria Empresarial">Consultoria Empresarial</option>
                            <option value="Medicina">Medicina</option>
                            <option value="Industria">Industria</option>
                            <option value="Construccion">Construcción</option>
                            <option value="Servicios">Servicios</option>
                            <option value="Comercio">Comercio</option>
                            <option value="Automoviles">Automoviles</option>
                            <option value="Veterinaria">Veterinaria</option>
                            <option value="Tecnologia">Tecnologia</option>
                            <option value="Otros">Otros</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="">Nombre Completo</label>
                        <input required type="text" class="form-control" value="{{empresa.nombre_completo}}"
                            name="nombre_completo">
                    </div>

                    <div class="doble-campo">
                        <div class="form-group w-50 mr-3">
                            <label for="">Telefono:</label>
                            <input required type="text" class="form-control" name="tel" value="{{empresa.tel}}">
                        </div>
                        <div class="form-group w-50 ml-3">
                            <label for="">RFC</label>
                            <input placeholder="*Campo opcional*" type="text" class="form-control" name="rfc">
                        </div>
                    </div>

                    <div class="doble-campo">
                        <div class="form-group w-50 mr-3">
                            <label for="">Carrera:</label>
                            <input type="text" value="{{empresa.carrera}}" class="form-control" name="carrera">
                        </div>
                        <div class="form-group w-50 ml-3">
                            <label for="">Matricula</label>
                            <input type="text" class="form-control" value="{{empresa.matricula}}" name="matricula">
                        </div>
                    </div>


                    <div class="doble-campo">
                        <div class="form-group w-50 mr-3">
                            <label for="">Estado:</label>
                            <input required type="text" value="{{empresa.estado}}" class="form-control" name="estado">
                        </div>
                        <div class="form-group w-50 ml-3">
                            <label for="">Municipio</label>
                            <select required name="municipio" id="" value="{{empresa.municipio}}" class="form-control">
                                <option>Selecciona Municipio</option>
                                <option value="Aguascalientes">Aguascalientes</option>
                                <option value="Asientos"> Asientos</option>
                                <option value="Calvillo"> Calvillo</option>
                                <option value="Cosío"> Cosío</option>
                                <option value="Jesús María"> Jesús María</option>
                                <option value="Pabellón de Arteaga"> Pabellón de Arteaga</option>
                                <option value="Rincón de Romos"> Rincón de Romos</option>
                                <option value="San José de Gracia"> San José de Gracia</option>
                                <option value="Tepezalá"> Tepezalá</option>
                                <option value="El Llano"> El Llano</option>
                                <option value="San Francisco de los Romo">San Francisco de los Romo</option>
                            </select>

                        </div>
                    </div>


                    <div class="form-group">
                        <label for="">Domicilio</label>
                        <input type="text" class="form-control" value="{{empresa.calle}}" name="calle">
                    </div>
                    <div class="doble-campo">
                        <div class="form-group w-50 mr-3">
                            <label for="">Colonia</label>
                            <input type="text" class="form-control" value="{{empresa.numero_dir}}" name="numero_dir">
                        </div>
                        <div class="form-group w-50 ml-3">
                            <label for="">Codigo Postal</label>
                            <input type="number" class="form-control" value="{{empresa.cp}}" name="cp">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="">Descripción empresa</label>
                        <textarea name="descripcion_empresa" id="txtAreaDesc" cols="30" rows="4"
                            value="{{empresa.descripcion_empresa}}" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="">Correo Electronico</label>
                        <input type="email" class="form-control" value="{{empresa.correo}}" name="correo">
                    </div>
                    <div class="form-group">
                        <label for="">Contraseña</label>
                        <input type="password" class="form-control" value="" name="password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-outline-info">Actualizar Empresa</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('txtAreaDesc').value = "{{empresa.descripcion_empresa}}";
        document.getElementById('giro').value = "{{ empresa.giro_empresarial }}";
    </script>
    {{>footer}}
