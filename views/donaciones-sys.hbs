{{> header}}
<link rel="stylesheet" href="./assets/css/tableUca.css">

<body>
    <div class="contenedor">
        <div class="menu" id="menu">
            <ul>
                <li>
                    <img src="./assets/img/empresas/inicio.png" alt="">
                    <a href="/sistemaHome">Inicio</a>
                </li>
                <li>
                    <img src="./assets/img/empresas/cupones.png" alt="">
                    <a href="/sistemaCupones">Cupones</a>
                </li>
                <li>
                    <img src="./assets/img/empresas/Donaciones.png" alt="">
                    <a href="/sistemaDonaciones">Donaciones</a>
                </li>
                <li>
                    <img src="./assets/img/empresas/logOut.png" alt="">
                    <a href="/">Salir</a>
                </li>
            </ul>
        </div>
        <div class="contenido">
            <button type="button" id="sidebarCollapse" class="btn" data-toggle="collapse">
                <span class="navbar-toggler-icon"><i class="fa fa-list" aria-hidden="true"></i></span>
            </button>
            <h1 class="mt-3">Bienvenido {{ empresa.nombre_empresa }}</h1>
            <h2 class="mt-3">Tus Solicitudes De Donaciones</h2>

            <a href="formDonaciones" class="btn btn-outline-info btn-sm mt-3 mb-4">Agregar Solicitud</a>


            <div class="container">

                <table class="table-responsive-sm mt-4">
                    <thead>
                        <tr>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Cuenta</th>
                            <th>Banco</th>
                            <th>Descripcion</th>
                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each donaciones}}
                        <tr>
                            <td id="image"><img style="width: 150px;" src="./assets/uploads/{{this.imagen}}" alt="">
                            </td>
                            <td>{{this.titulo_donacion}}</td>
                            <td>{{this.descripcion_donacion}}</td>
                            <td>{{this.cuenta_bancaria}}</td>
                            <td>{{this.banco}}</td>
                            <td class="text-center">
                                <a href=""><img style="width: 30px;" src="./assets/img/icons/delate.png" alt=""></a>
                                <a href="" type="button"> <img style="width:30px;" src="./assets/img/icons/edit.png"
                                        alt=""></a>
                                <a href="/info-donaciones:{{this._id}}"><img style="width: 30px;" src="./assets/img/icons/ver.png" alt=""></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>


    <script src="./assets/js/tableUca.js"></script>

    {{> footer}}